<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"
    android:background="@color/light_gray">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_back_button"
        android:onClick="goBack"
        android:contentDescription="@string/back_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PSM"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_text"/>

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_text"
        android:layout_marginTop="70dp"
        android:background="@drawable/edittext_background"
        android:hint="@string/enter_text_to_encrypt"
        android:padding="12dp"
        android:textColorHint="#BFBFBF"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="text"
        android:autofillHints=""
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/inputText"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:hint="@string/enter_encrypt_password"
        android:padding="12dp"
        android:textColorHint="#BFBFBF"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:autofillHints=""
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>

    <Button
        android:id="@+id/encrBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/inputPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_background"
        android:text="@string/Encrypt"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/decBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/encrBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
        android:text="@string/decrypt"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/outputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/decBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/output_text"
        android:textColor="@color/purple_500"
        android:textSize="20sp"/>

</RelativeLayout>
